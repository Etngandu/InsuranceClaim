@model ENB.InsuranceAndClaims.MVC.Models.CreateAndEditPolicyType
@using ENB.InsuranceAndClaims.Entities

@{
    ViewData["Title"] = "Edit";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Edit Policy Type</strong></h2>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px;">
                            <label asp-for="PolicyTypeCode" class="control-label"></label>
                        </div>
                        <input asp-for="PolicyTypeCode" class="form-control" />
                        <span asp-validation-for="PolicyTypeCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin:10px 0px 10px 0px;">
                            <label asp-for="PolicyTypeDescrition" class="control-label"></label>
                        </div>
                        <textarea asp-for="PolicyTypeDescrition" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="PolicyTypeDescrition" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



