@using ENB.InsuranceAndClaims.Entities;
@model ENB.InsuranceAndClaims.MVC.Models.DisplayClaimDocument;

@{
    ViewData["Title"] = "Details";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Details ClaimDocument: @ViewBag.Policycode</strong></h2>
</div>

<div id="view-all">
    @await Html.PartialAsync("_Details", Model)
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
<div class="row">
    <div class="col-md-6">
        <a asp-action="Edit" asp-controller="ClaimDocument" asp-route-id="@ViewBag.Id" asp-route-CustomerId="@ViewBag.Idcust"
           asp-route-PolicyId="@ViewBag.Idpol" asp-route-ClaimHeaderId="@ViewBag.Idclh" class="btn btn-info btn-block col-md-2">Edit</a>
    </div>
    <div class="col-md-6">
        <a asp-action="List" asp-controller="ClaimDocument" asp-route-CustomerId="@ViewBag.Idcust"
           asp-route-PolicyId="@ViewBag.Idpol" asp-route-ClaimHeaderId="@ViewBag.Idclh" class="btn btn-secondary btn-block col-md-5">Back to List</a>
    </div>
</div>




