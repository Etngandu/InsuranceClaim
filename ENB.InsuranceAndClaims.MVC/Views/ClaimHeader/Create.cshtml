@model ENB.InsuranceAndClaims.MVC.Models.CreateAndEditClaimHeader
@using ENB.InsuranceAndClaims.Entities

@{
    ViewData["Title"] = "Create";
}

<div class="alert alert-primary" role="alert">
    <h2><strong>Create New ClaimHeader in @ViewBag.Message</strong></h2>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-CustomerId="@ViewBag.Idcust" asp-route-PolicyId="@ViewBag.Idpol">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Ref_Claim_Status" class="control-label"></label>
                        </div>
                        <select asp-for="Ref_Claim_Status" class="form-control" asp-items="Html.GetEnumSelectList<Ref_Claim_Status>()"></select>
                        <span asp-validation-for="Ref_Claim_Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header">
                            <label asp-for="Ref_Claim_Type" class="control-label"></label>
                        </div>
                        <select asp-for="Ref_Claim_Type" class="form-control" asp-items="Html.GetEnumSelectList<Ref_Claim_Type>()"></select>
                        <span asp-validation-for="Ref_Claim_Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="DateOfClaim" class="control-label"></label>
                        </div>
                        <input asp-for="DateOfClaim" class="form-control" />
                        <span asp-validation-for="DateOfClaim" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Date_of_Settlement" class="control-label"></label>
                        </div>
                        <input asp-for="Date_of_Settlement" class="form-control" />
                        <span asp-validation-for="Date_of_Settlement" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Amount_Claimed" class="control-label"></label>
                        </div>
                        <input asp-for="Amount_Claimed" class="form-control" />
                        <span asp-validation-for="Amount_Claimed" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Amount_Paid" class="control-label"></label>
                        </div>
                        <input asp-for="Amount_Paid" class="form-control" />
                        <span asp-validation-for="Amount_Paid" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="card-header" style="margin-top:10px">
                            <label asp-for="Other_Details" class="control-label"></label>
                        </div>
                        <textarea asp-for="Other_Details" type="text" class="form-control" rows="5" autofocus></textarea>
                        <span asp-validation-for="Other_Details" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:10px">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-action="List" asp-route-CustomerId="@ViewBag.Idcust" asp-route-PolicyId="@ViewBag.Idpol" class="btn btn-secondary btn-block col-md-4">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
