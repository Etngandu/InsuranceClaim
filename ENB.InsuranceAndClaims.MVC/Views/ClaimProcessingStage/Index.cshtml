
<div class="alert alert-primary" role="alert">
    <h2><strong>List Claim Processing Stages</strong></h2>
</div>

<a asp-action="Create" id="addCustomer" asp-controller="ClaimProcessingStage" class="btn btn-success text-white" style="margin-bottom:10px"><i class="fa-sharp fa-solid fa-microchip"></i>   New Claim Processing Stage</a>
<table id="ClaimProcessingStageTable" class="table table-striped table-bordered" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Claim_Status_Name</th>
            <th>Claim_Status_Description</th>            
            <th> </th>
        </tr>
    </thead>
</table>

<link href="~/lib/datatable/datatable1.13/datatables-1.13.4/css/datatables.bootstrap5.min.css" rel="stylesheet" />

@section scripts{
    <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="~/lib/datatable/datatable1.13/datatables-1.13.4/js/jquery.datatables.min.js"></script>
    <script src="~/lib/datatable/datatable1.13/datatables-1.13.4/js/datatables.bootstrap5.min.js"></script>
    <script>
        var Popup, datatable, IdPatient = parseInt('@ViewBag.Patient_Id'), IdWard = parseInt('@ViewBag.Ward_Id')
        $(document).ready(function () {
            datatable = $("#ClaimProcessingStageTable").DataTable({
                "ajax": {
                    "url": "/ClaimProcessingStage/GetClaimProcessingStageData",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [

                    { "data": "id" },
                    {
                        "data": "claim_Status_Description",
                        "width": "250px",
                        "render": function (data, type, row, meta) {
                            return '<b><a href="/ClaimProcessingStage/Details/' + row.id + '">' + data + '</b></a>';
                        }
                    },
                    {
                        "data": "claim_Status_Description"
                        
                    },                    
                    {
                        "data": "id", "render": function (data) {
                            return "<a class= 'btn btn-primary btn-sm text-white' onclick=location.href='@Url.Action("Edit","ClaimProcessingStage")/" + data + "'><i class='fas fa-pencil'></i><b> Edit</b></a>" + "\r\n" +
                                "<a class= 'btn btn-danger btn-sm text-white' style = 'margin-left:5px' onclick =location.href='@Url.Action("Delete","ClaimProcessingStage")/" + data + "' > <i class='fa-solid fa-trash-can' > </i><b> Delete</b > </a> ";

                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "280px"
                    }

                ],
                "language": {

                    "emptyTable": "No data Found, Please Click On <b>Add New</b> Button"
                }

            });

        });





    </script>
    }

